    </div>
    <div class="card-body">

        <div id="divContenedorTabla"></div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="modalSucursal" tabindex="-1" aria-labelledby="modalSucursalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalSucursalLabel">Gestionar Sucursal</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="frmSucursal" method="post" class="row g-3">
                    <div class="col-md-6">
                        <label for="inputIdSucursal" class="form-label">Id Sucursal</label>
                        <input type="text" class="form-control shadow-sm rounded" name="idSucursal" id="idSucursal" readonly>
                    </div>
                    <div class="col-md-6">
                        <label for="inputNombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control shadow-sm rounded" name="nombre" id="nombre">
                    </div>
                    <div class="col-md-12">
                        <label for="inputDireccion" class="form-label">Direccion</label>
                        <input type="text" class="form-control shadow-sm rounded" name="direccion" id="direccion">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" onclick="GuardarSucursal()">Guardar</button>
                <button type="button" class="btn btn-secondary" onclick="LimpiarSucursal()">Limpiar</button>
            </div>
        </div>
    </div>
</div>

