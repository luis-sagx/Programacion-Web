@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <h1 class="text-primary">
        <i class="fas fa-clinic-medical"></i> Sistema de Gestión Farmacia
    </h1>
    <p class="text-muted">Desarrollado por Daniel Guaman</p>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Características Principales</h2>
    <div class="row">
        <!-- Gestión de Tipo de Medicamentos -->
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="fas fa-medkit fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Gestión de Tipo de Medicamentos</h5>
                    <p class="card-text">Administra los tipos de medicamentos disponibles en tu farmacia.</p>
                </div>
            </div>
        </div>
        <!-- Gestión de Laboratorios -->
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="fas fa-flask fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Gestión de Laboratorios</h5>
                    <p class="card-text">Controla la información de los laboratorios proveedores.</p>
                </div>
            </div>
        </div>
        <!-- Gestión de Sucursales -->
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="fas fa-store fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Gestión de Sucursales</h5>
                    <p class="card-text">Administra las sucursales de tu farmacia de manera eficiente.</p>
                </div>
            </div>
        </div>
        <!-- Gestión de Medicamentos -->
        <div class="col-md-3">
            <div class="card text-center h-100">
                <div class="card-body">
                    <i class="fas fa-pills fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Gestión de Medicamentos</h5>
                    <p class="card-text">Controla el inventario de medicamentos en todas las sucursales.</p>
                </div>
            </div>
        </div>
    </div>
</div>